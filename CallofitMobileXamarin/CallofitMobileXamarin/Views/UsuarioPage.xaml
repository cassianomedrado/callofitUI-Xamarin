<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CallofitMobileXamarin.Views.UsuarioPage"
             BackgroundColor="#F8F8FF">
    <StackLayout>
        <StackLayout BackgroundColor="#212529" HeightRequest="150">
            <Label x:Name="nomeUser" Text="User" TextColor="White" FontSize="Large" Margin="0,40,0,0" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Image Source="user.png" WidthRequest="100" HeightRequest="100" VerticalOptions="End" />
        </StackLayout>

        <StackLayout Margin="20">
            <Button Text="Trocar Senha" BackgroundColor="LightSlateGray" TextColor="White" Margin="5" Clicked="ChangePasswordButton_Clicked" />
            <!--<Button Text="Sair" BackgroundColor="#2196F3" TextColor="White" Margin="5" Clicked="LogoutButton_Clicked" ImageSource="sairIcone.png"/>-->
        </StackLayout>
        <StackLayout Margin="120">
          
            <Button Text="Sair" BackgroundColor="red" TextColor="White" Margin="5" Clicked="LogoutButton_Clicked" ImageSource="sairIcone.png"/>
        </StackLayout>
    </StackLayout>

</ContentPage>